block main
  //- div#root
  div.container
    table(class="table table-hover")
      thead(class="thead-light")
        tr
          th(scope="col") Foto
          th(scope="col") Nome
          th(scope="col") Forza
          th(scope="col") Ruoli
          //- th(scope="col") Club
      each player in supervars.SearchResults
        tbody
          tr(key=`${player.id}` className="Result-player grabbable")
            td 
              img(
                class="playerphoto"
                src=`${"../../data/images/photos/" + player.photo_folder + "/" + player.id + ".png"}`
                alt=`${player.nome}`
                )
            td
              a(href="/team/player/"+`${player.id}`) 
                p #{player.nome}
            td
              p #{player.valtot}
            td
              each role in player.pos_all.split(":::")
                p.ruoli #{role} 
                
