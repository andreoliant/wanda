doctype html
html(lang="ita")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=5.0")
    //- Bootstrap
    link(href="/static/css/bootstrap.min.css", rel="stylesheet")
    link(href="/static/css/dashboard.css", rel="stylesheet")
    link(href="/static/css/base.css", rel="stylesheet")
    block styles  

    title Wanda Football Manager

  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
      a(class.navbar-brand href="/home") Wanda
      button(
        class="navbar-toggler" type="button" 
        data-toggle="collapse" data-target="#navbarsExampleDefault" 
        aria-controls="navbarsExampleDefault" aria-expanded="false" 
        aria-label="Toggle navigation")
        span.navbar-toggler-icon
      div(class="collapse navbar-collapse" id="navbarsExampleDefault")
        block navbar
        
      div(class="collapse navbar-collapse" id="navbarsExampleDefault")
        ul.navbar-nav.ml-auto
          li.nav-item
            a(class="nav-link" href="#") #{supervars.managerName}
          li.nav-item
            a(class="nav-link" href="#") #{supervars.teamName}

    div.container-fluid
      div.row
        nav.col-md-2.d-none.d-md-block.bg-light.sidebar
          block navbar-left
        main(role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4")
          block main

    script(src="/static/js/jquery-3.3.1.js")
    script(src="/static/js/popper.js")
    script(src="/static/js/bootstrap.min.js")
    block scripts
